<h1><%= @conversation.subject %></h1>

<% @conversation.receipts_for(current_user).reverse.each do |receipt| %>
  <div>
    <div><%= receipt.message.sender.name %> commented:</div>
    <p><%= receipt.message.body %></p>
  </div>
<% end %>

<%= form_tag conversation_messages_path(@conversation), method: :post, remote: true do %> <!-- Regular form tag and not a form_for because we're not interacting with objects in the controller -->
  <div>
    <%= text_area_tag :body %>
  </div>
  <%= submit_tag %>
<% end %>
